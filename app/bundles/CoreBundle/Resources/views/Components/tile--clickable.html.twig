{% if href is defined and href is not empty %}
    <a class="tile tile--clickable {{ className|default('') }}" id="clickable-tile-{{ random() }}" href="{{ href }}">
        <div>
            <div class="tile-content">
                {{ content|raw }}
            </div>
            <div class="tile-icon">
                <i class="{{ icon|default('ri-arrow-right-line') }}" aria-hidden="true"></i>
            </div>
        </div>
    </a>
{% else %}
    <button type="button" class="tile tile--clickable" id="clickable-tile-{{ random() }}" {% if onclick is defined %}onclick="{{ onclick }}"{% endif %}>
        <div>
            <div class="tile-content">
                {{ tileContent|raw }}
            </div>
            <div class="tile-icon">
                <i class="{{ icon|default('ri-arrow-right-line') }}" aria-hidden="true"></i>
            </div>
        </div>
    </button>
{% endif %}
